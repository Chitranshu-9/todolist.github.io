<html>
    <head>
        <title> <%= title %> </title>
        
        <link rel="stylesheet" href="/css/home.css">
        <script src="https://kit.fontawesome.com/5b61b46cab.js" crossorigin="anonymous"></script>
    </head>
    <body>
        
        <img src="/images/backimage.jpg" alt="back" width="100%" height="40%">
        
        <div class="container">
        <h1>TODO List</h1>

        <form action="/create-tasklist" method="POST">
            <div class="task-area"><input type="text"  name="task"  placeholder="Enter your task..." required>
            <button id="add_task" type="submit" aria-required="true"> <i class="fas fa-plus fa-lg"></i> </button>
            </div>
            <div>
                <br>
               
            <input type="date" name="date" required >
            <select  id="category" name="category">
                <option value="Personal">Personal</option>
                <option value="Work">Work</option>
                <option value="Home">Home</option>
                <option value="Others">Others</option>
            </select>
            
            </div>
            <br>
            <!-- <div><button type="submit" aria-required="true"> Add task </button></div> -->
            
        </select>
        </form>
        </div>

        <div    class="list-tasks">
            <ul>
                <% for (let i of todo_list){ %>
                    
                    <li>

                        <div class="content">
                            
                            <!-- checkbox -->
                            <input type="checkbox" id="cbox">             
                            
                            <!-- items -->
                            <div class="itemAdded"  id="task">
                            <label class="itemChecked">
                                <%= i.task %>
                            </label>
                            &nbsp
                            &nbsp
                            <div class="itemAdded" id="date">
                                <label class="itemChecked">
                                    <%= i.date %>
                                </label>
                            </div>
                            
                            &nbsp
                            &nbsp
                            &nbsp
                            &nbsp
                            </div>

                            <div id="category_displayed">
                               <label id="category_selected"><%= i.category %></label>
                            </div>
                        
                            <div id="delete_button">
                                <a href="/delete-task/?id=<%= i._id%>">
                                    <i class="far fa-trash-alt" style="color: #757575;"></i>
                                </a>
                            </div>
                        </div>
                    </li>

                    <br>

                <% } %>
            </ul>
        </div>
        

    </body>
    
    </script>
</html>